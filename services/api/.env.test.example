# Test Environment Variables
# Copy this file to .env.test and adjust values as needed

# Database for testing (IMPORTANT: Use a separate test database!)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zorem_test

# JWT Secret (can be any string for tests)
JWT_SECRET=test-secret-key-for-unit-tests-only

# Node environment
NODE_ENV=test

# Storage (mock S3/R2 - tests don't actually upload)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=test-key
AWS_SECRET_ACCESS_KEY=test-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=test-bucket

# Email (not needed for most tests, but required for auth routes)
RESEND_API_KEY=test-key-not-used
RESEND_FROM_EMAIL=test@example.com

# Frontend URL
FRONTEND_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3001

# Server
PORT=3000
